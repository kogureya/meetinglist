<% if user_signed_in? %>
  <ul class='meeting-list'>
    <% @meeting.each do |meeting| %>
      <li class='list'>
        <div class='meeting-day'>
          会議日程
          <%= meeting.date.strftime"%m/%d" %>
          <%= meeting.time.strftime"%H:%M" %>
        </div>
        <div class='meeting-organizer'>
          担当者
          <%= meeting.user.name %>
        </div>
        <div class='meeting-title'>
          <%= meeting.title %>
        </div>
        <div class='meeting-client'>
          <%= meeting.client %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>